{
    "compilerOptions": {
        "baseUrl": "./",
        "paths": {
            "~/*": [
                "src/*"
            ],
        },
        "target": "esnext",
        "useDefineForClassFields": true,
        "module": "esnext",
        "moduleResolution": "node",
        "isolatedModules": true,
        "strict": true,
        "jsx": "react-jsx",
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "lib": [
            "esnext",
            "dom",
            "dom.iterable",
            "scripthost"
        ],
        "skipLibCheck": true,
        "typeRoots": ["./types", "./node_modules/@types"],
    },
    "exclude": [
        "node_modules",
        "webpack.config.js",
    ],
    "include": [
        "src/**/*",
        "types/**/*"
    ]
}