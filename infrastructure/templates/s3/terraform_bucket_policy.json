{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "",
            "Effect": "Allow",
            "Principal": {
                "AWS": "${identifier}"
            },
            "Action": [
                "s3:DeleteObject",
                "s3:GetObject",
                "s3:PutObject"
              ],
            "Resource": "arn:aws:s3:::${bucket}/*"
        },
        {
            "Sid": "",
            "Effect": "Allow",
            "Principal": {
                "AWS": "${identifier}"
            },
            "Action": "s3:ListBucket",
            "Resource": "arn:aws:s3:::${bucket}"
        }
    ]
}